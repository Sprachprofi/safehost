</script>
<div class="container">
  <% if @listing %>
    <div class="alert alert-info">You are currently listed as a host. Review or delete your listing <%= link_to "here", edit_host_path(@listing) %>.</div>
  <% end %>
  <div class="main-page">
    <div class="d-flex justify-content-center">
      <h1 class="header-style text-center">
        <span class="free-header-style fw-bold">Free </span>private accommodation for refugees
      </h1>
    </div>
    <div class="d-flex justify-content-center mt-2">
      <span class="offers-available fs-6">Short-term & long-term</span>
    </div>
    <div class="d-flex justify-content-center mt-2">
      <span class="offers-available fs-6 text-center"><b>*</b>created in close collaboration with volunteers of <a href="https://www.facebook.com/berlin.laf/" target="_blank" class="link-secondary"> LAF</a>, where your offers will be accepted</span>
    </div>
    <div class="d-flex justify-content-center mt-5">
      <%= image_tag "location.svg" %> <span class="city-name fs-4">Berlin, Germany</span>
    </div>
    <div class="d-flex justify-content-center mt-2 mb-5">
      <span class="offers-available fs-5"><span class="offers-quantity">499</span> accomodation offers available</span>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center align-items-center">
  <div class="d-flex justify-content-evenly bg-back w-75">
    <div class="d-flex flex-column align-items-center justify-content-center w-50 bg-style big-button-card">
      <div class="big-button-card-link">
        <%= link_to t("buttons.host"), new_host_path, class: "btn btn-call-to-action", role: "button" %>
      </div>
      <div class="big-button-card-text">
        Here you can help by offering accommodation to refugees.
      </div>
    </div>
    <div class="d-flex flex-column align-items-center justify-content-center w-50 bg-style big-button-card">
      <div class="big-button-card-link">
        <%= link_to t("buttons.find"), "/admin/available_hosts", class: "btn btn-call-to-action", role: "button" %>
      </div>
      <div class="big-button-card-text">
        Right now only volunteer teams can browse accommodation offers available to refugees.
      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center mt-5 mb-5">
  <span class="social-name fs-3 text-center"> Please share this website with someone who can help!</span>
</div>
<div class="d-flex justify-content-center">
  <div href="https://safehost.space/" id="copy-link" class="share-link d-flex flex-column align-items-center">
    <%= image_tag "share.svg", class: "mb-2" %>
    <div class="share" id="alertArea">
      Share the link
    </div>
    <div class="link-copied d-none" id="alertText">Link copied</div>
  </div>
</div>
